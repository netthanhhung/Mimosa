<UserControl x:Class="Mimosa.Apartment.Silverlight.UI.DataPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    
    <StackPanel x:Name="root" Orientation="Horizontal">
        <ComboBox
            x:Name="uiDataList"
            DisplayMemberPath="Value"
            SelectedValuePath="Key" />
        <CheckBox x:Name="uiInactive" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"></CheckBox>
    </StackPanel>
    
</UserControl>
